{
  "name": "patmos/craft-patmos-s3",
  "description": "patmos S3 integration for Craft CMS",
  "type": "craft-plugin",
  "keywords": [
    "aws",
    "cms",
    "craftcms",
    "flysystem",
    "s3",
    "yii2"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Patmos",
      "homepage": "https://patmos.tech/"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": "^8.0.2",
    "craftcms/cms": "^4.0.0-beta.1",
    "craftcms/flysystem": "^1.0.0-beta.2",
    "league/flysystem-aws-s3-v3": "^3.0.0"
  },
  "require-dev": {
    "craftcms/ecs": "dev-main",
    "craftcms/phpstan": "dev-main",
    "craftcms/rector": "dev-main"
  },
  "autoload": {
    "psr-4": {
      "patmos\\craftpatmoss3\\": "src/"
    }
  },
  "scripts": {
    "check-cs": "ecs check --ansi",
    "fix-cs": "ecs check --ansi --fix",
    "phpstan": "phpstan --memory-limit=1G"
  },
  "extra": {
    "name": "Patmos S3",
    "handle": "craft-patmos-s3",
    "documentationUrl": "https://github.com/craftcms/aws-s3/blob/master/README.md"
  },
  "config": {
    "platform": {
      "php": "8.0.2"
    },
    "allow-plugins": {
      "yiisoft/yii2-composer": true,
      "craftcms/plugin-installer": true
    }
  }
}
